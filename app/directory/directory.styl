@import "../colors.styl"
$border-line = 1px solid $grey2

#directory
  box-shadow 0 20px 40px 10px $grey2
  background-color $white
  position relative
  height 640px
  width 320px
  border $border-line
  border-radius 4px
  margin-top 80px
  left 50%
  transform translate(-50%, 0)

  .header, .label
    border-bottom $border-line

  .header
    background-color $grey1
    height 50px
    .title
      line-height 50px
      float left
      padding-left 14px
    .close
      opacity .3
      float right
      margin 18px 14px 0 0

  .label
    color $grey3
    line-height 40px
    padding-left 14px
    box-shadow 0 0 2px $grey2

  .footer
    width 100%
    height 50px
    position absolute
    bottom 0
    border-top $border-line
    .link, .upload-button
      box-sizing border-box
    .link
      float left
      line-height 50px
      padding-left 14px
      color $blue1
    .upload-button
      border solid 1px $blue2
      border-radius 1px
      float right
      margin 10px 14px 0 0
      text-align center
      line-height 28px
      width 60px
      color $white
      background-color $blue1
